{
	"name": "yapper",
	"main": "dist/src/index.js",
	"type": "module",
	"packageManager": "pnpm@9.2.0",
	"scripts": {
		"build": "tsc && cross-env NODE_ENV=development node .",
		"start": "cross-env NODE_ENV=production node .",
		"translate": "tsx languages/utils/interface.ts && pnpm prettier typings/language.d.ts --write",
		"prepare": "husky && prisma migrate dev && pnpm run translate",
		"tunnel": "cloudflared tunnel run"
	},
	"lint-staged": {
		"**/*.{ts,json}": [
			"pnpm prettier --write"
		],
		"languages/{en-US.json,interface.ts}": [
			"pnpm translate",
			"git add typings/language.d.ts"
		]
	},
	"dependencies": {
		"@discordjs/core": "^1.2.0",
		"@discordjs/rest": "^2.3.0",
		"@discordjs/ws": "^1.1.1",
		"@hono/node-server": "^1.11.4",
		"@prisma/client": "^5.15.1",
		"@sapphire/bitfield": "^1.2.2",
		"@sapphire/snowflake": "^3.5.3",
		"@sentry/node": "^7.116.0",
		"@sentry/tracing": "^7.116.0",
		"bufferutil": "^4.0.8",
		"colorette": "^2.0.20",
		"datadog-metrics": "^0.11.1",
		"dotenv-extended": "^2.9.0",
		"hono": "^4.4.7",
		"husky": "^9.0.11",
		"i18next": "^23.11.5",
		"i18next-intervalplural-postprocessor": "^3.0.0",
		"stripe": "^15.12.0",
		"utf-8-validate": "^6.0.4"
	},
	"devDependencies": {
		"@sentry/types": "^7.116.0",
		"@types/node": "20.14.7",
		"@typescript-eslint/eslint-plugin": "^7.12.0",
		"@typescript-eslint/parser": "^7.12.0",
		"cross-env": "^7.0.3",
		"eslint": "8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-neon": "^0.1.62",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.2",
		"prisma": "^5.15.1",
		"tsx": "^4.15.7",
		"typescript": "^5.5.2"
	},
	"pnpm": {
		"overrides": {
			"discord-api-types": "0.37.90",
			"@discordjs/ws": "dev"
		}
	}
}
